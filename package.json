{
  "name": "simple-dmx-control",
  "version": "0.0.1",
  "description": "Simple Socket.io server to control a DMX Bricklet from Tinkerforge",
  "main": "dist/index.js",
  "scripts": {
    "test": "nyc --reporter html --reporter text -t coverage mocha -r ts-node/register test/*.ts",
    "start": "node .",
    "build": "tsc",
    "dev": "ts-node-dev --project ./tsconfig.json --respawn --no-deps --rs --cls ./src"
  },
  "keywords": [
    "tinkerforge",
    "nodejs",
    "socket.io"
  ],
  "author": "Nico W. <info@ni-wa.de> (http://trickfilm400.de/)",
  "license": "MIT",
  "dependencies": {
    "@types/convict": "^6.1.1",
    "convict": "^6.2.3",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "socket.io": "^4.5.1",
    "tinkerforge": "^2.1.34"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  }
}
